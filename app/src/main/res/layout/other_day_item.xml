<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/other_item"
    android:layout_width="90dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <TextView
        android:id="@+id/other_day_info"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="星期一"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/other_day_weather_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/biz_plugin_weather_qing"/>

    <TextView
        android:id="@+id/other_day_temperature"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="5-10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/other_day_weather_change"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="多云转晴"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/other_day_wind"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="微风"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</LinearLayout>