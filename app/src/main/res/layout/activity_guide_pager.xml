<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pku.ss.xiaot.viewpagerdemo.GuidePager">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#fffff454"
        android:layout_weight="10"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@id/viewpager"
        android:background="#ff000000"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_indicator_focused"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_indicator_unfocused"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <ImageView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_indicator_unfocused"
            android:padding="5dp"
            android:layout_margin="5dp"/>

    </LinearLayout>
</LinearLayout>
